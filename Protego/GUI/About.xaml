<Window x:Class="Protego.GUI.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protego.GUI"
        mc:Ignorable="d"
        Title="О программе" Height="530" Width="477" ResizeMode="NoResize" Icon="/Protego;component/Resources/usb.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="appIcon" HorizontalAlignment="Left" Margin="20,0,0,0" Source="/Protego;component/Resources/usb.png" Width="104"/>
        <Label x:Name="appName" Content="Protego - USB Security" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Grid.Column="1"/>
        <Label x:Name="appVersion" Content="Версия 0.1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top"/>
        <Label x:Name="appCopyrights" Content="Copyright © Manchenkov Artyom 2015" Grid.Column="1" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top"/>
        <Label x:Name="appCompany" Content="DeepSide Interactive" Grid.Column="1" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="appDescription" Grid.ColumnSpan="2" Margin="10" Grid.Row="1" IsReadOnly="True" TextWrapping="Wrap" Padding="5" VerticalScrollBarVisibility="Visible" TextAlignment="Justify"/>

    </Grid>
</Window>
