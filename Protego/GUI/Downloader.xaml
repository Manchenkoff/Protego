<Window x:Class="Protego.GUI.Downloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protego.GUI"
        mc:Ignorable="d"
        Title="Загрузчик обновлений" Height="239" Width="550" ResizeMode="NoResize" Icon="/Protego;component/Resources/edit.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="headerLabel" Content="Обновления загружаются..." Margin="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <ProgressBar x:Name="downloadProgressBar" Height="40" Margin="10,0" Grid.Row="1" VerticalAlignment="Center"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="100" Padding="5" Click="cancelClick"/>

    </Grid>
</Window>
